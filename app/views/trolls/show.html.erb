<!DOCTYPE HTML>
<html>
<head>
	<title>Trolls <%= @troll.name%></title>
	<meta property="og:url"                content="<%= request.original_url %>" />
	<meta property="og:type"               content="article" />
	<meta property="og:title"              content="Trolls <%= @troll.name %>" />
	<meta property="og:description"        content="<%= @troll.name %> - <%= @troll.categories.map{|cat| cat.name} %>" />
	<meta property="og:image"              content="<%= @troll.image_url%>" />
	<!-- <link href="css/style.css" rel='stylesheet' type='text/css' /> -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="shortcut icon" type="image/x-icon" href="images/fav-icon.png" />
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
	</script>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
	<!-- // <script src="js/jquery.min.js"></script> -->
  <script type="text/javascript">
		var $ = jQuery.noConflict();
			$(function() {
				$('#activator').click(function(){
					$('#box').animate({'top':'0px'},500);
				});
				$('#boxclose').click(function(){
				$('#box').animate({'top':'-700px'},500);
				});
			});
			$(document).ready(function(){
			$(".toggle_container").hide(); 
			$(".trigger").click(function(){
				$(this).toggleClass("active").next().slideToggle("slow");
					return false; //Prevent the browser jump to the link anchor
			});
								
		});
	</script>
</head>
<body>
	
	<div class="content">
		<div class="wrap">
			<div class="single-page">
				<div class="single-page-artical">
					<div class="grids_of_2">
						<img src="<%= @troll.image_url %>">
						<h2><%= @troll.name %></h2>
					</div>
					<div class="menu_box_list">
		  			<ul>
		  				<%= @troll.categories.map{|category| 
		  					"<li><a href=#{category_path(category)}>#{category.name}</a></li>"}.join('').html_safe %>
					 	</ul>
					 	</div>
		  			<div class="clear"> </div>
		  			<div class="fb-share-button" data-href="<%= request.original_url %>" data-layout="button_count">
						</div>
						<div
  class="fb-like"
  data-share="true"
  data-width="450"
  data-show-faces="true">
</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="footer">
		<p>Design by </p>
	</div>
</body>
</html>
